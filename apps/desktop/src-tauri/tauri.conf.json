{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meet-scribe",
  "version": "0.0.1",
  "identifier": "com.srprasanna.meet-scribe",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "publisher": "Meet Scribe",
    "homepage": "https://github.com/srprasanna/meet-scribe",
    "longDescription": "A bot-free desktop meeting assistant that captures and transcribes meetings from Teams, Zoom, and Google Meet.",
    "shortDescription": "Bot-free meeting assistant with transcription",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/srprasanna/meet-scribe/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1MTM2MzE2QTI1MUM3NEUKUldST3gxR2lGbU1UbFl0WGl1N2FrR2ZQMFZ3R3NJckxGV2xOeDcvRkRqcWRqdzBBT2pUcC9kbWQK"
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Meet Scribe",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
